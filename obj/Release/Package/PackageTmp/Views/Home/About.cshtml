@{

    ViewBag.Title = "Map of The Garage Sale Participants";
}
<h2>@ViewBag.Title.</h2>
&nbsp; &nbsp; &nbsp;
<h3> </h3>



<div class="row">
    <div class="col-md-6">
        <script src="http://maps.googleapis.com/maps/api/js">
        </script>

        <script>
            function initialize() {
                var mapOpt = {
                    center: new google.maps.LatLng(39.388703, -104.849892),
                    zoom: 14,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                };
                var map = new google.maps.Map(document.getElementById("googleMap"), mapOpt);
            }

            google.maps.event.addDomListener(window, 'load', initialize);
        </script>

        <div id="googleMap" style="width:550px;height:400px;"></div>
        &nbsp; &nbsp; &nbsp;

        <p><a class="btn btn-default" href="http://www.hoagaragesales.com/participant/" target=" _blank">List of Address Participating &raquo;</a></p>

    </div>



    <style>
        .register {
            border: 3px solid green;
            padding: 25px;
            background-color: antiquewhite;
        }
    </style>

    <div class="col-md-6">
        <div class="register">
            <h2> Welcome to our community!  </h2>
            &nbsp;
            <h2>
                We are so excited to bring to you this year a better way to know which homes will be participatingin the garage sale.  Take a look at our map and see the icons, that will let you know who is participating and help you map out your ideal route.

            </h2>
            <h2>
                If you live in the Woodlands HOA and want to participate in our garage sale please register and send us an email so that we can add you to our map!
            </h2>
        </div>
    </div>

</div>